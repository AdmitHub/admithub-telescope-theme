.mod-dropdown-trigger
  position relative
  &:hover
    .mod-dropdown
      display block !important

.g-header-nav .mod-dropdown 
.mod-dropdown
  display none !important
  position absolute
  right 0
  top 100%
  background-color color-white
  min-width mod-dropdown-width
  ui-border-radius()
  text-align left
  border border
  z-index 1

  li:last-child
    {class-list-header-links}
      border-bottom 0


.mod-dropdown-center
  @extend .mod-dropdown
  pos-x-center mod-dropdown-width


.mod-dropdown-text-link-list
  a
    color color-link
    display block
    padding 1rem
    type-small()
    border-bottom border
    transition-property none

    &:hover
      background-color color-grey-xlight
