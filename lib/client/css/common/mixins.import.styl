vendor-prefixes = webkit, ms, moz, o

vendor(prop, arg)
  for prefix in vendor-prefixes
    -{prefix}-{prop} arg
    -{prop} arg

flex-container(dir = row)
  display -webkit-flex
  display flex

  vendor flex-direction dir

flex(val)
  -webkit-box-ordinal-group val
  -moz-box-ordinal-group val
  -ms-flex-order val
  -webkit-order val
  order val

ul-reset()
  list-style none
  margin 0
  padding 0

pos-y-center-companion()
  &:before
    content ''
    inline-block()
    vertical-align middle
    height 100%

dim(width, height = width)
  height width
  width height

inline-block(important = false)
  if important is true
    display inline-block !important
  else
    display inline-block
  vertical-align: middle

remove-button()
  background none
  border 0
  padding 0

type-size(font line = 1.4)
  font-size unit(font 'px')
  font-size unit(font/10 'rem')
  line-height unit(line 'em')

type-secondary()
  color color-type-secondary

remify(value)
    u = unit(value)

    if u is 'px'
      return unit(value/10 'rem')
    else
      return unit(value u)

serif(weight = 300)
  font-family "grad", "georgia", serif
  font-weight weight

sans(weight = 300)
  font-family "ff-tisa-sans-web-pro", "helvetica neue", "helvetica", "arial", sans-serif
  font-weight weight

type-small()
  type-size 13

type-medium()
  type-size 16

type-regular()
  type-size 18

type-large()
  type-size 24 1.25

type-xlarge()
  type-size 30 1.25

type-huge()
  type-size 48 1.2

type-xhuge()
  type-size 70 1

type-serif-bold()
  serif 600

type-sans-bold()
  sans 600

type-sans-uppercase()
  type-sans-bold()
  text-transform uppercase

type-ui()
  type-sans-bold()

ui-height(height, children = true)
  height height
  line-height height

  if children
    > *
      line-height height !important

ui-small()
  type-small()
  ui-height ui-small-height

  > *
    line-height ui-small-height

  .icon-x
  .icon-check
    type-size 14

ui-base()
  ui-height ui-height-default
  padding 0 ui-padding
  border-radius 0.2rem

  > *
    line-height 4.5rem

ui-unbtn()
  font-size inherit
  line-height inherit
  font-weight inherit
  color inherit
  background-color transparent
  margin 0 
  padding 0
  border-radius 0
  border 0
  vertical-align inherit

ui-btn-color(background-color, type-color = color-white)
  color type-color
  if background-color
    background-color background-color

  a
    color type-color

  &:hover
    color type-color
    if background-color
      background-color darken(background-color, 8)

ui-border-radius()
  border-radius ui-border-radius

ui-btn(background-color = color-green, type-color = color-white)
  transition background-color 0.15s
  text-align center
  border 0
  cursor pointer
  ui-btn-color background-color, type-color
  ui-base()
  type-ui()
  padding 0 1em
  inline-block()
  ui-border-radius()

  > *
    inline-block()
    vertical-align top

    &.button-loader
      display none

  &:hover
    text-decoration none

ui-form-inputs()
  .ui-f-input,
  input[type="text"],
  input[type="password"],
  input[type="email"]
    {block}

grid-col(num)
  margin-bottom grid-gutter
  width 100%

  &:last-child
    border-bottom 0

  &.grid-no-y-space
    margin-bottom 0
    padding-bottom 0
    border-bottom 0

  @media mq-med
    float left
    border 0
    width (100%/num)

    if num is 4
      width 50%
      &:nth-of-type(odd)
        clear both

    if num is 2
      &:nth-of-type(odd)
        clear both

  @media mq-lg
    border-bottom 0
    width (100%/num)

    if num is 3 or num is 4
      &:nth-of-type(odd)
        clear none

placeholder()
  &:-moz-placeholder
    {block}

  &::-moz-placeholder
    {block}

  &:-ms-input-placeholder
    {block}

  &::-webkit-input-placeholder
    {block}
  

alt-on-dark(important = false)
  +ui-form-inputs()
    border 0

  .type-secondary
    opacity 0.5
    color color-white

  if important
    color color-white !important

    h1, h2, h3, h4, h5, h6, a
      color color-white !important
  else
    color color-white

    h1, h2, h3, h4, h5, h6, a
      color color-white


