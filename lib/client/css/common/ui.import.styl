.ui-base
  ui-base()

.ui-unbtn
  ui-unbtn()

.ui-btn
a.ui-btn
  ui-btn()

  .icon-carat-right
    type-size 15

.ui-btn-alt
a.ui-btn-alt
  ui-btn color-purple

.ui-pill-checked
  ui-btn false, color-type-secondary
  border border-secondary

  &.ui-small
    ui-height ui-small-height + 0.4rem false

  .icon-check
    color color-green

.ui-btn-secondary
  @extend .ui-btn
  ui-btn color-grey-xdark color-white

.ui-btn-circle
  padding 0
  border-radius 100px
  pos-y-center-companion()
  line-height inherit
  width ui-height-default

  &.ui-small
    width ui-small-height

  .icon-x
    type-size 12

.ui-large
  @media mq-med
    type-large()
    ui-height 5.5rem

  > *
    line-height 5.5rem


.ui-small
a.ui-small
  ui-small()

.ui-round
  border-radius 10rem !important

.ui-btn-on-green
  @extend .ui-btn
  ui-btn darken(color-green, 8)
  box-shadow 0 0 0 color-white

.ui-btn-large
  @extend .ui-btn
  @extend .ui-large

  .icon-carat-right
    type-size 20

.ui-btn-icon-right
  margin-left 1em

.ui-stretch
  width 100%
  display block
