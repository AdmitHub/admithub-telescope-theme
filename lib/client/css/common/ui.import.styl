.ui-base
  ui-base()

.ui-unbtn
  ui-unbtn()

.ui-btn
.button
  ui-btn()

  .icon-carat-right
    type-size 15

.ui-pill-checked
  ui-btn false, color-type-secondary
  border border-secondary

  &.ui-small
    ui-height ui-small-height + 0.4rem false

  .icon-check
    color color-green

.ui-btn-secondary
a.ui-btn-secondary
  @extend .ui-btn
  ui-btn color-grey-light color-white
  font-weight normal

.ui-btn-circle
  padding 0
  border-radius 100px
  pos-y-center-companion()
  line-height inherit
  width ui-height-default

  &.ui-small
    width ui-small-height
    padding 0
    border-radius 100px

  .icon-x
    type-size 12

.ui-large
a.ui-large
  @media mq-med
    type-large()
    ui-height 5.5rem

  > *
    line-height 5.5rem

  .icon-carat-right
    type-size 20


.ui-small
a.ui-small
  ui-small()

.ui-xsmall
a.ui-xsmall
  ui-xsmall()

.ui-round
  border-radius 10rem !important

.ui-btn-icon-right
  margin-left 1em

.ui-stretch
  width 100%
  display block

.ui-btn-with-rank
  padding-right 0

.ui-rank-action
  padding-right ui-padding

.ui-rank
  background-color: #e4ebdf
  color color-green
  padding-right ui-padding

.ui-btn-set-middle
  > * 
    margin 0 1rem

.ui-btn-facebook
  ui-btn color-facebook, color-white

.ui-btn-twitter
  ui-btn color-twitter, color-white

.ui-btn-linked-in
  ui-btn color-linked-in, color-white

.ui-btn-google-plus
  ui-btn color-google-plus, color-white
