.posts
  margin 0 auto

h1.post-list-title
  margin-bottom: 2rem

.post
  display block
  margin-bottom grid-gutter
  padding-bottom grid-gutter
  border-bottom border-tertiary-light
  clearfix()

  .center-modules
    width 100%
    display block

  .user-tag
    ui-unbtn()

  .post-upvote
    ui-unbtn()

.post-heading
  type-large()

.post-title
  display block
  margin-bottom 0.5rem

.post-meta
  type-small()
  color color-type-secondary
  line-height inherit
  margin-bottom 0.5rem

.post-categories
  type-small()
  type-secondary()
  margin-bottom 0.5rem

.post-upvote
  type-medium()

.post-upvoted
  &:hover
    .post-upvoted
      display none
    .post-unupvote
      inline-block()
      vertical-align top

  .post-rank
    border-left border-secondary-light

.post-rank
  border-left border-style-primary rgba(color-white, 0.25)
  margin-left ui-padding - 0.4rem
  padding-left ui-padding

.post-unupvote
  display none
  line-height ui-small-height

  &:hover
    color color-green

.post-link
a.post-link
  margin-left 0.5rem
  type-secondary()
  type-small()
  inline-block()
