.g-header
  @media mq-med
    position relative

  .mod-dropdown
    display block
    position static

    @media mq-med
      position absolute
      display none

  &:after
    position absolute
    top 100%
    left 0
    content ''
    background-image url(img-path + 'forum-header-shadow.png')
    height 1rem 
    width 100%

.g-header-wrap
  background-color color-white

.g-header-nav,
.g-header-nav .dropdown-menu
  background-color color-white

  @media mq-med
    background-color transparent

.g-header-logo
  z-index 10
  position relative
  serif 300 true

.g-header-nav
  {class-list-header-links}
    type-medium()

    @media mq-med
      type-small()
      line-height g-header-height

  .notifications-menu
    @extend .mod-dropdown-trigger
    display block

    @media mq-med-desk
      ui-border-radius()
      a
        padding (grid-gutter/2)

    @media mq-med-desk
      margin-bottom 0.75rem

    @media mq-med
      inline-block()

    .mod-dropdown
      position static
      width 25rem
      pos-x-center 25rem
      type-small()
      type-serif()

      @media mq-med-desk
        position static
        background-color transparent

      li
        border-bottom border-tertiary-light
        padding (grid-gutter/2) 0

        @media mq-med
          padding (grid-gutter/2)

        &:last-child
          border-bottom 0

      {class-list-header-links}
        border-bottom 0
        padding 0

  .notification-item
    margin-bottom 0

  a.notifications-count
    display none

    @media mq-med
      inline-block()

  .notifications-title
    type-large()
    mod-space-top()

    @media mq-med
      padding 0 (grid-gutter/2)

.g-header-hamburger
  float left
  padding 0 (grid-gutter/2)
  margin-left -(grid-gutter/2)
  color color-link

  .icon-x
    position absolute
    opacity 0

  &.open
    .icon-x
      position static
      opacity 1

    .icon-hamburger
      position absolute
      opacity 0

.g-header-cta-wrap
  pos-y-center-companion()
  inline-block()
  height g-header-height

.g-header-cta
  margin-left (grid-gutter/2)

.g-header-nav-admin
  > a
    border-bottom 0

.g-header-nav-user-sign-up
  margin-left g-header-nav-space

.g-header-row
  overflow hidden
  position relative
  background-color rgba(color-grey-xlight, 0.65)
  padding-left layout-space
  padding-right layout-space
  height g-header-row-height
  line-height g-header-row-height
  
  > *
    line-height g-header-row-height

.g-header-admithub
  margin-bottom layout-space
  display block
  image img-path + 'owl-repeat-light.png' 9.1rem 5.15rem
  background-position layout-space 0
  type-sans-bold()
  type-small()
  cursor pointer

  > *
    display inline-block
    vertical-align middle

.g-header-admithub-owls
  max-width 9.1rem
  margin-right layout-space

.g-header-aa-description-wrap
  text-align center
  mod-section()
  row 2

.g-header-aa-description
  margin (0 auto)
  type-xlarge()
  max-width 75rem
