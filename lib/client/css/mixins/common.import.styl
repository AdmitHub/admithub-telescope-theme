flex-container(dir = row)
  display -webkit-flex
  display flex
  flex-direction dir

flex(val)
  order val

ul-reset()
  list-style none
  margin 0
  padding 0

pos-y-center-companion()
  &:before
    content ''
    inline-block()
    vertical-align middle
    height 100%

pos-x-center(width)
  position absolute
  right 50%
  margin-right (width / -2)

dim(width, height = width)
  height width
  width height

inline-block(important = false)
  if important is true
    display inline-block !important
  else
    display inline-block
  vertical-align: middle

remove-button()
  background none
  border 0
  padding 0

grid-col(num)
  margin-bottom grid-gutter
  width 100%

  &:last-child
    border-bottom 0

  &.grid-no-y-space
    margin-bottom 0
    padding-bottom 0
    border-bottom 0

  @media mq-med
    float left
    border 0
    width (100%/num)

    if num is 4
      width 50%
      &:nth-of-type(odd)
        clear both

    if num is 2
      &:nth-of-type(odd)
        clear both

  @media mq-lg
    border-bottom 0
    width (100%/num)

    if num is 3 or num is 4
      &:nth-of-type(odd)
        clear none

placeholder()
  &:-moz-placeholder
    {block}

  &::-moz-placeholder
    {block}

  &:-ms-input-placeholder
    {block}

  &::-webkit-input-placeholder
    {block}
  
icon()
  font-family: 'admithub';
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

row-base()
  margin-bottom row-space
  padding-bottom row-space
  border-bottom border
  clearfix()

row(mult = 1, nested = false)
  display block
  row-base()

  if nested
    .last
      border-bottom 0
      margin-bottom 0
      padding-bottom 0
  else
    &:last-child
      border-bottom 0
      margin-bottom 0
      padding-bottom 0

stretch()
  width 100%
