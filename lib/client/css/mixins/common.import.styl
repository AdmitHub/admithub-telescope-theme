flex-container(dir = row)
  display -webkit-flex
  display flex
  flex-direction dir

flex(val)
  order val

ul-reset()
  list-style none
  margin 0
  padding 0

pos-y-center-companion()
  &:before
    content ''
    inline-block()
    vertical-align middle
    height 100%

pos-x-center(width)
  position absolute
  right 50%
  margin-right (width / -2)

dim(width, height = width)
  height width
  width height

inline-block(important = false)
  if important is true
    display inline-block !important
  else
    display inline-block
  vertical-align: middle

remove-button()
  background none
  border 0
  padding 0

grid-col(num)
  margin-bottom grid-gutter
  width 100%

  &:last-child
    border-bottom 0

  &.grid-no-y-space
    margin-bottom 0
    padding-bottom 0
    border-bottom 0

  @media mq-med
    float left
    border 0
    width (100%/num)

    if num is 4
      width 50%
      &:nth-of-type(odd)
        clear both

    if num is 2
      &:nth-of-type(odd)
        clear both

  @media mq-lg
    border-bottom 0
    width (100%/num)

    if num is 3 or num is 4
      &:nth-of-type(odd)
        clear none

placeholder()
  &:-moz-placeholder
    {block}

  &::-moz-placeholder
    {block}

  &:-ms-input-placeholder
    {block}

  &::-webkit-input-placeholder
    {block}
  

alt-on-dark(important = false)
  +ui-form-inputs()
    border 0

  .type-secondary
    opacity 0.5
    color color-white

  a
  button
    color color-white

  if important
    color color-white !important

    h1, h2, h3, h4, h5, h6, a
      color color-white !important
  else
    color color-white

    h1, h2, h3, h4, h5, h6, a
      color color-white


icon()
	font-family: 'admithub';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;

	/* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;


row(mult = 1, nested = false)
  display block
  margin-bottom grid-gutter*mult
  padding-bottom grid-gutter*mult
  border-bottom border-tertiary-light
  clearfix()

  if nested
    .last
      border-bottom 0
      margin-bottom 0
      padding-bottom 0
  else
    &:last-child
      border-bottom 0
      margin-bottom 0
      padding-bottom 0

