mod-space(mult = 1)
  margin-top (grid-gutter/2*mult)
  margin-bottom (grid-gutter/2*mult)

mod-space-bottom(mult = 1)
  margin-bottom (grid-gutter/2*mult)

mod-space-top(mult = 1)
  margin-top (grid-gutter/2*mult)

mod-space-right(mult = 1)
  margin-right (grid-gutter/2*mult)
  
mod-section()
  mod-space 4

mod-section-header()
  margin-top 0
  margin-bottom mod-section-header-divide-space
  padding-bottom mod-section-header-divide-space
  position relative

  &:after
    content ''
    height mod-section-header-divide-height
    width mod-section-header-divide-width
    background-color color-green
    position absolute
    top 100%
    left 0
    margin-top -0.15em // arbitrary value, line height is adding to space
    margin-left -(mod-section-header-divide-width/10)
