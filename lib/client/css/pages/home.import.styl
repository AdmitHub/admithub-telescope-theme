.pg-home-hero
  background url('/home-hero-bg.jpg')
  background-size cover
  background-position center top
  padding-bottom g-header-height
  text-align center

.pg-home-hero-title
  margin 0 auto

  &:after
    display none

.pg-home-nav-wrap
  position absolute
  top 100%
  left 0
  width 100%
  background-color color-purple
  display none
  transition-property margin-top
  transition-duration 0.2s

  @media mq-med
    display block
    margin-top g-header-height * -1

  .logo,
  .forum
    display none

  &.is-fixed
    position fixed
    top 0
    left 0
    margin-top 0

    .logo,
    .forum
      inline-block()

.pg-home-nav
  type-sans-uppercase()
  type-medium()
  letter-spacing 0.03em

  ul
    ul-reset()

  li
    inline-block()

    &:last-child
      a
        margin-bottom 0

  a
    inline-block()
    padding grid-gutter 0
    margin-right grid-gutter

    &:after
      opacity 0
      transition-property opacity
      transition-duration 0.2s

    &.active
      position relative

      &:after
        content ''
        position absolute
        width 100%
        height 0.2rem
        bottom 20%
        left 0
        background-color color-green
        opacity 1

.pg-home-bullets
  clearfix()
  ul-reset()

.pg-home-bullets-icons-wrap
  margin-bottom 1.5rem
  position relative

.pg-home-bullets-icon
  color color-grey-light
  text-align center
  font-size pg-home-bullets-icon-size - 3rem
  width pg-home-bullets-icon-size
  height pg-home-bullets-icon-size
  padding 0.25em 0
  line-height 1em
  margin-bottom 1.5rem
  border 2px solid color-grey-light
  inline-block()
  border-radius 50%

.pg-home-bullets-text
  max-width 35rem
  margin 0 auto

.pg-home-bullets-title
  margin-bottom 1.5rem

.pg-home-bullets-desc
  margin-bottom 2rem

.pg-home-schools
  margin-bottom 4.5rem

.pg-home-team-member-info
  margin-bottom 1.5rem
  h3
    margin-bottom: 0
    margin-top: 0

.pg-home-team-member-avatar
  inline-block()
  max-width pg-home-team-member-avatar-width

.pg-home-team-member-info-text
  inline-block()
  width (100% - pg-home-team-member-avatar-width)
  padding-left (grid-gutter/2)

.pg-home-team-member-social-icons
  ul-reset()
  margin-top (grid-gutter/4)

.pg-home-team-member-social-icon
  inline-block()
  margin-right (grid-gutter/4)
  border border-secondary
  type-size 19
  border-radius 50%
  pos-y-center-companion()
  dim 3.5rem
  text-align center

  a
    inline-block()

  .icon-twitter-bird
    type-size 15
    color color-twitter

  .icon-github
    type-size 20
    color color-github

  .icon-linked-in
    color color-linked-in

.pg-home-newsletter-content
  @media mq-lg
    margin-left 35rem

  @media mq-xlg
    margin-left 15rem

.pg-home-newsletter-letters
  display none

  @media mq-lg
    position absolute
    left -29% 
    top -17rem
    max-width 70rem
    display block

.pg-home-newsletter-left
  margin-bottom grid-gutter

  @media mq-med
    margin-bottom 0

.pg-home-newsletter-right
  position relative
  margin-bottom 0

  @media mq-med
    padding-right pg-home-newsletter-submit-width + grid-gutter

  @media mq-lg
    padding-left grid-gutter*1.5

.pg-home-newsletter-input
  width 100%
  margin-bottom (grid-gutter/2)

  @media mq-med
    margin-bottom 0

.pg-home-newsletter-submit
  width 100%

  @media mq-med
    position absolute
    right 0
    width pg-home-newsletter-submit-width


